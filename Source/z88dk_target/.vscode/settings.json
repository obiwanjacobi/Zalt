{
    "files.associations": {
        // use 'Z80 Macro-Assembler' vscode extension
        "*.lis": "z80-macroasm",
        "*.inc": "z80-macroasm",
        "*.m4": "z80-macroasm",
        "*.sym": "z80-macroasm",
        "*.map": "z80-macroasm"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.obj": true,
        "**/*.exe": true,
        "**/*.o": true,
    },
    "files.autoSave": "afterDelay",
    "C_Cpp.autoAddFileAssociations": false,
    "editor.insertSpaces": true,
    "editor.renderWhitespace": "all",
    "editor.formatOnSave": true
}