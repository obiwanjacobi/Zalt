{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "echoCommand": true,
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "./make.cmd",
            "options": {
                "cwd": "${workspaceRoot}",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": {
                "owner": "z88dk",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error)\\s+(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "compile-verbose",
            "type": "shell",
            "command": "./verbose.cmd",
            "group": "build",
        },
        {
            "label": "assemble",
            "type": "shell",
            "command": "z80asm",
            "args": [
                "\"${file}\""
            ],
            "group": "build",
        },
        {
            "label": "test",
            "type": "shell",
            "command": "./_tests.unit/RunTests.cmd",
            "group": "test",
        },
        {
            "label": "deploy",
            "type": "shell",
            "command": "${workspaceRoot}\\deploy_target.cmd",
            "group": "none",
        }
    ]
}