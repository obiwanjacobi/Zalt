{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "echoCommand": true,
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            // "command": "zcc +zalt -vn -m -SO3 -DDEBUG -Ca-DDEBUG -clib=sdcc_iy --max-allocs-per-node200000 '@_zalt.lst' -o zalt",
            "command": "C:\\z88dk\\bin\\zcc",
            "args": [
                //"zcc",
                "+zalt",
                "-vn",
                "-m",
                "-SO3",
                "-DDEBUG",
                "-Ca-DDEBUG",
                "-clib=sdcc_iy",
                "--max-allocs-per-node200000",
                // "@_zalt.lst",
                "-o zalt"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
            },
            "problemMatcher": {
                "owner": "z88dk",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error)\\s+(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "compile-debug",
            "command": "zcc",
            "args": [
                "+zalt",
                "-clib=sdcc_iy",
                "--max-allocs-per-node200000",
                "-m",
                "--list",
                "-s",
                "-g",
                "\"${file}\"",
                "-o",
                "\"${fileDirname}\\${fileBasenameNoExtension}\""
            ],
        },
        {
            "label": "compile",
            "command": "zcc",
            "args": [
                "+zalt",
                "-SO2",
                "-clib=sdcc_iy",
                "--max-allocs-per-node200000",
                "-m",
                "\"${file}\"",
                "-o",
                "\"${fileDirname}\\${fileBasenameNoExtension}\""
            ],
        },
        {
            "label": "compile-lst",
            "command": "zcc",
            "args": [
                "+zalt",
                "-clib=sdcc_iy",
                "--max-allocs-per-node200000",
                "-m",
                "\"@${file}\"",
                "-o",
                "\"${fileDirname}\\${fileBasenameNoExtension}\""
            ],
        },
        {
            "label": "assemble",
            "command": "z80asm",
            "args": [
                "\"${file}\""
            ],
        },
        {
            "label": "deploy",
            "command": "${workspaceRoot}\\deploy_target.cmd",
        }
    ]
}