{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "echoCommand": true,
    "tasks": [
        {
            "label": "build",
            "type": "process",
            //"command": "cmd /C z88dk zcc +zalt -vn -m -SO3 -DDEBUG -Ca-DDEBUG -clib=sdcc_iy --max-allocs-per-node200000 -o zalt",
            "command": "make.cmd",
            // "args": [
            //     "zcc",
            //     "+zalt",
            //     "-vn",
            //     "-m",
            //     "-SO3",
            //     "-DDEBUG",
            //     "-Ca-DDEBUG",
            //     "-clib=sdcc_iy",
            //     "--max-allocs-per-node200000",
            //     "-o zalt"
            // ],
            "options": {
                "cwd": "${workspaceRoot}",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": {
                "owner": "z88dk",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error)\\s+(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "compile-debug",
            "type": "shell",
            "command": "zcc",
            "args": [
                "+zalt",
                "-clib=sdcc_iy",
                "--max-allocs-per-node200000",
                "-m",
                "--list",
                "-s",
                "-g",
                "\"${file}\"",
                "-o",
                "\"${fileDirname}\\${fileBasenameNoExtension}\""
            ]
        },
        {
            "label": "compile",
            "type": "shell",
            "command": "zcc",
            "args": [
                "+zalt",
                "-SO2",
                "-clib=sdcc_iy",
                "--max-allocs-per-node200000",
                "-m",
                "\"${file}\"",
                "-o",
                "\"${fileDirname}\\${fileBasenameNoExtension}\""
            ]
        },
        {
            "label": "compile-lst",
            "type": "shell",
            "command": "zcc",
            "args": [
                "+zalt",
                "-clib=sdcc_iy",
                "--max-allocs-per-node200000",
                "-m",
                "\"@${file}\"",
                "-o",
                "\"${fileDirname}\\${fileBasenameNoExtension}\""
            ]
        },
        {
            "label": "assemble",
            "type": "shell",
            "command": "z80asm",
            "args": [
                "\"${file}\""
            ]
        },
        {
            "label": "deploy",
            "type": "shell",
            "command": "${workspaceRoot}\\deploy_target.cmd"
        }
    ]
}